<script src="script.js">

function showPage(id) {
    document.querySelectorAll(".page").forEach(page => {
        page.classList.remove("active");
    });
    document.getElementById(id).classList.add("active");
}

function like(id) {
    let count = localStorage.getItem(id + "-likes") || 0;
    count++;
    localStorage.setItem(id + "-likes", count);
    document.getElementById(id + "-likes").innerText = count;
}

function addComment(event, id) {
    if (event.key === "Enter") {
        let text = event.target.value;
        if (text.trim() === "") return;

        let comments = JSON.parse(localStorage.getItem(id + "-comments") || "[]");
        comments.push(text);
        localStorage.setItem(id + "-comments", JSON.stringify(comments));

        let li = document.createElement("li");
        li.textContent = text;
        document.getElementById(id + "-comments").appendChild(li);

        event.target.value = "";
    }
}

window.onload = function() {
    ["video1","photo1"].forEach(id => {
        let count = localStorage.getItem(id + "-likes") || 0;
        document.getElementById(id + "-likes").innerText = count;

        let comments = JSON.parse(localStorage.getItem(id + "-comments") || "[]");
        comments.forEach(text => {
            let li = document.createElement("li");
            li.textContent = text;
            document.getElementById(id + "-comments").appendChild(li);
        });
    });
};

</script>
